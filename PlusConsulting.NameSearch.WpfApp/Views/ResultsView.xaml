<UserControl x:Class="PlusConsulting.NameSearch.WpfApp.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlusConsulting.NameSearch.WpfApp.Views"
             xmlns:viewModels="clr-namespace:PlusConsulting.NameSearch.WpfApp.ViewModels"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:ResultsViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Text="Search Results" Style="{StaticResource TitleText}"/>

        <TextBlock Grid.Row="1" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="4" Text="{Binding TextFriendlyResults}" FontSize="18" Margin="20"/>
    </Grid>
</UserControl>
