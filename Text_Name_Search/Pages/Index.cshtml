@page
@model Text_Name_Search.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-12">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        &nbsp;
    </div>
    <div class="col-md-6">
        <h3>To search for names, add names using the Search Items link above then return here to submit a URL to search.</h3>
    </div>
    <div class="col-md-3">
        &nbsp;
    </div>
</div>
<div class="row">
<div class="col-md-3">
    &nbsp;
</div>
<div class="col-md-6">
    <p>
        <h3>Enter URL of website to search: <br /></h3>
    </p>
    <div asp-validation-summary="All"></div>
    <form method="POST">
        <div>
            <input style="width:400px;" asp-for="UrlToSearch" /> &nbsp;&nbsp; <input type="submit" />
        </div>
    </form>
</div>
<div class="col-md-3">
    &nbsp;
</div>
</div>
<div class="row">
<div class="col-md-3">
    &nbsp;
</div>
<div class="col-md-6">
    &nbsp;
</div>
<div class="col-md-3">
    &nbsp;
</div>
</div>
<div class="row">
<div class="col-md-3">
    &nbsp;
</div>
<div class="col-md-6">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    # found
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NamesFound)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Key)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-md-3">
    &nbsp;
</div>
</div>
